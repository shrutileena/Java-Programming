import java.util.*;

class HelloWorld {
    public static void main(String[] args) {
        // using literal
        String name ="Shruti";
        
        // using String
        String name1 = new String("Shruti");
        
        // using new keyword
        // StringBuilder
        StringBuilder name2 = new StringBuilder(name);
        StringBuilder name3 = new StringBuilder("Agarwal");
        
        // String Buffer
        StringBuffer name4 = new StringBuffer("Shruti");
        StringBuffer name5 = new StringBuffer(name);
        name5.append(" A");
        
        // using character array
        char chars[] = {'G','f','g'};
        String name6 = new String(chars);
        
        char nums[] = {'1','2','3'};
        String name7 = new String(nums);
        
        //usign byte array
        byte ascii[] = {71,70,71};
        String name9 = new String(ascii);
        
        // incorrect
        // int nums2[] = {1,2,3};
        // String name8 = new String(nums2);
        
        System.out.println(name);
        System.out.println(name1);
        System.out.println(name2);
        System.out.println(name3);
        System.out.println(name4);
        System.out.println(name5);
        System.out.println(name6);
        System.out.println(name7);
        System.out.println(name2.reverse());
        System.out.println(name4.reverse());
        System.out.println(name9);
        
    }
}
